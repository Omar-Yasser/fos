{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "detail": "Compile and Run FOS",
      "type": "shell",
      "command": "make qemu",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "build-debug",
      "detail": "Compile and Run FOS in debug mode",
      "type": "shell",
      "command": "make qemu-gdb",
      "isBackground": true,
      "problemMatcher": {
        "pattern": [
          {
            "regexp": ".",
            "file": 1,
            "location": 2,
            "message": 3
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".",
          "endsPattern": "gdb"
        }
      }
    },
    {
      "label": "clean",
      "detail": "Clean build files",
      "type": "shell",
      "command": "make clean",
      "problemMatcher": []
    }
  ]
}
